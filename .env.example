# .env.example
# Copy to .env and fill in real values. Never commit .env to source control.

# ---------------------------------------------------------------
# Main application database (teams, reports, memberships, devices)
# ---------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/firstcommand

# FRC API credentials
FRC_API_USERNAME=your_frc_username
FRC_API_TOKEN=your_frc_token

# Server port
PORT=5000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost,https://yourapp.com

# ---------------------------------------------------------------
# Auth system (separate infrastructure)
# ---------------------------------------------------------------

# Dedicated PostgreSQL database for auth_users table only
AUTH_DATABASE_URL=postgresql://user:password@host:5432/firstcommand_auth

# Dedicated Redis instance for refresh token storage only
AUTH_REDIS_URL=redis://user:password@host:6379

# Secret key used to sign access/refresh JWTs (HS256)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_JWT_SECRET=replace_with_a_long_random_secret

# ---------------------------------------------------------------
# OAC (Offline Authorization Certificate) â€” Ed25519 keys
# ---------------------------------------------------------------
# Generate keypair:
#   python -c "
#   from cryptography.hazmat.primitives.asymmetric.ed25519 import Ed25519PrivateKey
#   from cryptography.hazmat.primitives import serialization
#   pk = Ed25519PrivateKey.generate()
#   print(pk.private_bytes(serialization.Encoding.PEM, serialization.PrivateFormat.PKCS8, serialization.NoEncryption()).decode())
#   print(pk.public_key().public_bytes(serialization.Encoding.PEM, serialization.PublicFormat.SubjectPublicKeyInfo).decode())
#   "
#
# IMPORTANT: When setting multi-line PEM keys in env vars, replace newlines with \n
# Example: OAC_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMC4C...base64...\n-----END PRIVATE KEY-----"

OAC_PRIVATE_KEY=replace_with_ed25519_private_key_pem
OAC_PUBLIC_KEY=replace_with_ed25519_public_key_pem

# How many days an OAC is valid before requiring online renewal (default: 7)
OAC_EXPIRE_DAYS=7
